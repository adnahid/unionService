<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Upzila.UpzilaPersonProfile"
    android:background="#3A1B1B"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Upzila Person"
        app:titleTextColor="@color/white"
        android:background="#3A1B1B"
        >
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:background="#2F4F4F"
                    >






                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageUp"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/doctor"
                    app:civ_border_color="#DFD6F6"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:id="@+id/nameUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="ডাঃ তাসলীমা ফেরদৌসী"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/titleUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="উপজেলা প্রাণিসম্পদ কর্মকর্তা"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:layout_marginBottom="4dp"
                    />

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/gmCardUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFDE59"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center"
                        >




                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/gm"
                            app:civ_border_color="#36F3E8E8"
                            android:scaleType="centerCrop"
                            />




                        <TextView
                            android:id="@+id/upGmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="GMAIL"
                            android:textStyle="bold"
                            android:textColor="#9C27B0"
                            android:layout_marginStart="3dp"
                            />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/callCardUp"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#CDDC39"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="3dp"
                                style="@style/Base.Theme.Neumorph"
                                >


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:src="@drawable/phone"
                                app:civ_border_color="#36F3E8E8"
                                app:civ_border_width="3dp"
                                android:scaleType="centerCrop"
                                />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:text="Call Now"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginStart="8dp"
                                />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/meassagesUp"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#CDDC39"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="3dp"
                                style="@style/Base.Theme.Neumorph"
                                >


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    android:src="@drawable/gm"
                                    app:civ_border_color="#36F3E8E8"
                                    app:civ_border_width="3dp"
                                    android:scaleType="centerCrop"
                                    />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="Meassages"
                                android:textStyle="bold"
                                android:textColor="#673AB7"
                                android:fontFamily="serif"
                                android:layout_marginStart="8dp"
                                />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>








                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#009688"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    >



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:layout_margin="3dp"
                            >

                            <TextView
                                android:id="@+id/textTvHeadLine1st"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="যোগদানের তারিখ"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:gravity="center_horizontal"
                                android:fontFamily="serif"
                                />

                            <TextView
                                android:id="@+id/textTvHeadLine2nd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="রোগী দেখার সময়ঃ"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="1dp"
                                />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#009688"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:layout_margin="3dp"
                        >

                        <TextView
                            android:id="@+id/textTvHeadLine3rd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="ব্যাচ (বিসিএস)"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:fontFamily="serif"
                            />

                        <TextView
                            android:id="@+id/textTvHeadLine4th"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="এই মর্মে জানা যায়নি"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="1dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>















            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#009688"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Admob Ads Shows"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="serif"
                />



    </androidx.cardview.widget.CardView>
</RelativeLayout>