<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >






    <androidx.cardview.widget.CardView
        android:id="@+id/advocateCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#673AB7"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="6dp"
        android:layout_margin="2dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >






            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/advocateImage"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/doctor"
                app:civ_border_color="#DFD6F6"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                />



        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/advocateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="মোঃ হেফজুল বাহার"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginStart="5dp"
                />


            <TextView
                android:id="@+id/advocateDegree"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="এল.এল.বি (অনার্স), এল.এল.এম
এডভোকেট দেওয়ানী ও ফৌজদারী আদালত জজ কোর্ট, নোয়াখালী।"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/detailsBtn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFDE59"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                android:layout_margin="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/item_bag"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:text="Details"
                        android:textStyle="bold"
                        android:textColor="#000FFF"
                        android:layout_marginStart="3dp"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>








    </androidx.cardview.widget.CardView>
</LinearLayout>