<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2F4F4F"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/policeCardView"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/policeImage"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:src="@drawable/doctor"
                app:civ_border_color="#DFD6F6"
                android:padding="8dp"
                android:background="@drawable/ovel_bac"
                android:layout_alignParentEnd="true"
                />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="2dp"
                android:padding="2dp"
                >

                <TextView
                    android:id="@+id/policeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="মোহাম্মদ সাদিকুর রহমান"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif"
                    />

                <TextView
                    android:id="@+id/policeQulafication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="অফিসার ইনচার্জ"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/joinTime"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="বর্তমান কর্মস্থলে যোগদানের তারিখ : ০৯ আগষ্ট ২০২২"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:fontFamily="serif"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    >




                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#673AB7"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    >


                    <Button
                        android:id="@+id/policeDail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#673AB7"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:text="Call"
                        />


                </androidx.cardview.widget.CardView>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/gm"
                        app:civ_border_color="#DFD6F6"
                        android:padding="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        />


                    <TextView
                        android:id="@+id/policeGmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="companiganjps@gmail.com"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginTop="15dp"
                        android:fontFamily="serif"
                        android:maxLines="1"
                        />

                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>









    </androidx.cardview.widget.CardView>
</LinearLayout>