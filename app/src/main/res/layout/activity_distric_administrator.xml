<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DistricAdministrator"
    android:background="#009688"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#009688"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Distric Administrator"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar">




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




 <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardCornerRadius="8dp"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:backgroundTint="#EBF4FA"
        >

        <ImageView
            android:id="@+id/admisImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"
            />

    </androidx.cardview.widget.CardView>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/admisTextTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text 1"
                                android:layout_margin="8dp"
                                android:gravity="center_horizontal"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                />


                            <TextView
                                android:id="@+id/admisTextTv2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text 2"
                                android:layout_margin="8dp"
                                android:gravity="end"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                />



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="end"
                                android:padding="5dp"
                                >

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/adPhone"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="#009688"
                                    app:cardCornerRadius="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    >


                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="5dp"
                                        android:src="@drawable/phone"
                                        app:civ_border_color="#36F3E8E8"
                                        app:civ_border_width="3dp"
                                        android:scaleType="centerCrop"
                                        />

                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/adGmail"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="#009688"
                                    app:cardCornerRadius="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    >


                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/gmail"
                                        app:civ_border_color="#36F3E8E8"
                                        android:padding="5dp"
                                        />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/adMessage"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="#009688"
                                    app:cardCornerRadius="5dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    >


                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="5dp"
                                        android:src="@drawable/gm"
                                        app:civ_border_color="#36F3E8E8"
                                        app:civ_border_width="3dp"
                                        android:scaleType="centerCrop"
                                        />

                                </androidx.cardview.widget.CardView>





                            </LinearLayout>


                        </LinearLayout>
                    </ScrollView>





                </LinearLayout>
            </androidx.cardview.widget.CardView>


    </LinearLayout>






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        >
    </androidx.cardview.widget.CardView>



</RelativeLayout>