<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#F44336"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp"
    android:id="@+id/bloodCardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >




    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_margin="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bloodMan"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/doctor"
            app:civ_border_color="#DFD6F6"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            />


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/bloodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/bloodNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:fontFamily="serif"
            />

        <TextView
            android:id="@+id/bloodDetails"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Description"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:fontFamily="serif"
            />
    </LinearLayout>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >



            <androidx.cardview.widget.CardView
                android:id="@+id/bloodPhoneCard"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#742324"
                app:cardCornerRadius="3dp"
                android:elevation="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="3dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bloodCall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/phone"
                    app:civ_border_color="#DFD6F6"
                    android:padding="5dp"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#742324"
                app:cardCornerRadius="3dp"
                android:elevation="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/bloodPhoneCard"
                android:layout_margin="3dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bloodMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gm"
                    app:civ_border_color="#DFD6F6"
                    android:padding="5dp"
                    />


            </androidx.cardview.widget.CardView>




        </RelativeLayout>





</androidx.cardview.widget.CardView>