<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Vatha.VathaThalika"
    android:background="@color/white"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="ভাতার তালিকা সমূহ"
        app:titleTextColor="@color/white"
        android:background="#4958dc"
        >
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:src="@drawable/top_bac2"
            />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/vathaSirajpur"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#5C4CE4"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:src="@drawable/doctor"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="সিরাজপুর ইউনিয়ন"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="10dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cotParboti"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#5C4CE4"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:src="@drawable/doctor"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="চরপার্বতী ইউনিয়ন"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="10dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/corCakdtha"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#5C4CE4"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/doctor"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="চরকাঁকড়া ইউনিয়ন"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="10dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/corPokirha"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#5C4CE4"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/doctor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="চর ফকিরা ইউনিয়ন"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="10dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/muchaPur"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#5C4CE4"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/doctor"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="মুছাপুর ইউনিয়ন"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="10dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/corElihe"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#5C4CE4"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/doctor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="চর এলাহী ইউনিয়ন"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="10dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rumpur"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#5C4CE4"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/doctor"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="রামপুর ইউনিয়ন"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="10dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>


            </LinearLayout>
        </ScrollView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Adds Show"
            android:background="@color/white"
            android:layout_margin="8dp"
            android:textAlignment="center"
            />

    </RelativeLayout>



</RelativeLayout>