<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HealthPackage.BloodDonet"
    android:background="#009688"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="ব্লাড"
        app:titleTextColor="@color/white"
        android:background="#009688"
        >

    </androidx.appcompat.widget.Toolbar>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#009688"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    >

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/Lottie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_rawRes="@raw/blood"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:visibility="visible"
                        android:padding="5dp"
                        />



                </androidx.cardview.widget.CardView>
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="একটি ব্যাগ রক্ত একজন মানুষের জীবন বাঁচাতে পারে রক্তদান করুন জীবন রক্ষা করুন।"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:layout_margin="4dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/donetSearch"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:backgroundTint="#ffffff"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="1dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:src="@drawable/hospital"
                            android:layout_gravity="center_horizontal"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="ডোনার খুঁজুন"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:layout_gravity="center_horizontal"
                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/donnerComete"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:backgroundTint="#ffffff"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="1dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:src="@drawable/hospital"
                            android:layout_gravity="center_horizontal"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="ব্লাড সংগঠন"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:layout_gravity="center_horizontal"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/donnerCommunication"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:backgroundTint="#ffffff"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="1dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:src="@drawable/hospital"
                            android:layout_gravity="center_horizontal"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="যোগাযোগ"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:layout_gravity="center_horizontal"
                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/socialMediaDonner"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:backgroundTint="#ffffff"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="1dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:src="@drawable/hospital"
                            android:layout_gravity="center_horizontal"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="স্যোশাল মিডিয়া গ্রুপ"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:layout_gravity="center_horizontal"
                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
















            </LinearLayout>

        </LinearLayout>
        </ScrollView>



    </RelativeLayout>




</RelativeLayout>