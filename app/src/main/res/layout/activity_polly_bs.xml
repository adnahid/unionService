                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="4dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="7sp"
                                android:text="শিল্প সংযোগের আবেদন"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="serif"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/hospital"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="5dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:text="999"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:layout_marginTop="1dp"
                                    android:layout_gravity="center_vertical"
                                    />



                            </LinearLayout>




                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/pollFree"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#E0FFFF"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="3dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="4dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="7sp"
                                android:text="ফি পরিশোধ করণ"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="serif"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/hospital"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="5dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:text="333"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:layout_marginTop="1dp"
                                    android:layout_gravity="center_vertical"
                                    />



                            </LinearLayout>




                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/pMitter"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#E0FFFF"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="3dp"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="4dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8sp"
                                android:text="প্রি - পেইড মিটার"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="serif"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/hospital"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="5dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:text="16163"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:layout_marginTop="1dp"
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>




                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/jonalOffice"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#E0FFFF"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="3dp"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="4dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8sp"
                                android:text="জোনাল অফিস"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="serif"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/hospital"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="5dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:text="999"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:layout_marginTop="1dp"
                                    android:layout_gravity="center_vertical"
                                    />



                            </LinearLayout>




                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/ovigok"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#E0FFFF"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="3dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="4dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8sp"
                                android:text="অভিযোগ কেন্দ্র"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="serif"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/hospital"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="5dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:text="333"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:layout_marginTop="1dp"
                                    android:layout_gravity="center_vertical"
                                    />



                            </LinearLayout>




                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>








            </LinearLayout>
        </ScrollView>







    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F44336"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_below="@id/topPollyLayout"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="3dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/doctorTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="নতুন র্নির্দেশনা অনুযায়ী, আপনি শুধুমাত্র সকাল ৮টা হতে রাত ১০টা পর্যন্ত আবেদন করতে পারবেন!!"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>