<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HealthPackage.HospitalName"
    android:background="#009688"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="হসপিটালের তালিকা সমূহ"
        app:titleTextColor="@color/white"
        android:background="#4958dc"
        >
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/top_bac"
            />




        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="ডাক্তার"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="চিকিৎসা সেবাকেন্দ্র সমূহ"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                />

        </LinearLayout>





        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/doctorListRecyclerGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textLayout"
            android:layout_margin="5dp"
            >
        </androidx.recyclerview.widget.RecyclerView>



    </RelativeLayout>







</RelativeLayout>