<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PdfViewer"
    android:background="#3A1B1B"
    >




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Pdf View"
        app:titleTextColor="@color/white"
        android:background="#3A1B1B"
        >

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@id/lastCard"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:backgroundTint="#3A1B1B"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/myLottie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_rawRes="@raw/animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:padding="5dp"
                android:visibility="visible"
                />



            <WebView
                android:id="@+id/pdfWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


<!--    <com.github.barteksc.pdfviewer.PDFView-->
<!--        android:id="@+id/pdfView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        />-->






        </LinearLayout>
  </androidx.cardview.widget.CardView>


   </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/lastCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="3dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/doctorTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Admod Adds Showing"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>














</RelativeLayout>