<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/pharmacyCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#ffffff"
        android:elevation="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ffffff"
                    android:elevation="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="8dp"
                    >


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pharmacyImage"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/doctor"
                        app:civ_border_color="#DFD6F6"
                        android:padding="5dp"
                        />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/pharmacyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="pharmacyT itle"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:id="@+id/pharmacyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="pharmacy Name"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif"

                        />


                    <TextView
                        android:id="@+id/pharmacyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="pharmacy Address"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/pharmacySameLineTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="pharmecy Relative same lines"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="#E7DDFF"
                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/pharmacyDail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#009688"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="5dp"
                        >


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:padding="3dp"
                            android:src="@drawable/phone"
                            app:civ_border_color="#36F3E8E8"
                            app:civ_border_width="3dp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Call Now"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="serif"
                            android:padding="2dp"
                            />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pharmacyMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#009688"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:padding="2dp"
                        >


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:padding="3dp"
                            android:src="@drawable/gm"
                            app:civ_border_color="#36F3E8E8"
                            app:civ_border_width="3dp"
                            android:scaleType="centerCrop"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:text="Message korun"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="serif"
                            />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>